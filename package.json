{
  "name": "boilerplate_reactjs",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Ã‰verton Toffanetto",
  "description": "This application is a boilerplate for complex and large systems, especially those that need to scale with security and code quality.",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "vite preview --port=3001",
    "lint": "eslint src --ext ts,tsx --max-warnings=0",
    "lint:css": "stylelint src/**/*.ts",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "jest --maxWorkers=50% --passWithNoTests",
    "test:w": "jest --watch --maxWorkers=25% --passWithNoTests",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "generate": "yarn plop --plopfile componentGenerator/plopfile.js",
    "check-update": "yarn upgrade-interactive --latest",
    "prepare": "husky install && chmod ug+x .husky/*",
    "release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint",
      "yarn lint:css"
    ]
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.2",
    "axios": "^0.27.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.2",
    "react-router-dom": "^6.3.0",
    "redux-persist": "^6.0.0",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@storybook/addon-a11y": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/builder-vite": "^0.1.37",
    "@storybook/react": "^6.5.9",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@swc/core": "^1.2.182",
    "@swc/jest": "^0.2.21",
    "@testing-library/dom": "^8.14.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.1",
    "@types/jest": "^28.1.3",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@types/react-test-renderer": "^18.0.0",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@vitejs/plugin-react": "^2.0.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^3.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.5.13",
    "eslint-plugin-testing-library": "^5.5.1",
    "file-loader": "^6.2.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "jest-styled-components": "^7.0.8",
    "jest-svg-transformer": "^1.0.0",
    "lint-staged": "^13.0.3",
    "plop": "^3.1.1",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.7.1",
    "react-test-renderer": "^18.2.0",
    "semantic-release": "^19.0.3",
    "serve": "^13.0.2",
    "source-map-loader": "^4.0.0",
    "storybook-dark-mode": "^1.1.0",
    "storybook-mobile": "^1.0.0",
    "stylelint": "^14.9.1",
    "stylelint-config-recommended": "^8.0.0",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.0",
    "vite-plugin-svgr": "^2.2.0",
    "vite-tsconfig-paths": "^3.5.0"
  }
}
